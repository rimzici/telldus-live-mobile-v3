<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/iconWidgetSensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_widget">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtSensorType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outdoor Temp."
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textColor="#FFFFFF"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linear_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_blue"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                android:id="@+id/iconSensor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtSensorValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="56"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"/>

            </LinearLayout>
                    <TextView
                        android:id="@+id/txtHistoryInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 min ago "
                        android:layout_gravity="center"
                        android:textColor="#FFFFFF"/>
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
