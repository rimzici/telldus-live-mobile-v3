<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/shape_no_padding">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:id="@+id/headerImageCover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_no_padding">
            <ImageView
                android:id="@+id/headerImage"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/telldus_geometric_header_bg"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txtWidgetTitleDialogue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unknown"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_alignLeft="@id/headerImageCover"
            android:layout_alignTop="@id/headerImageCover"
            android:layout_alignRight="@id/headerImageCover"
            android:layout_alignBottom="@id/headerImageCover"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/widgetDialogueCloseIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="statusx"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/telldusicons"
            android:background="@android:color/transparent"
            android:layout_alignLeft="@id/headerImageCover"
            android:layout_alignTop="@id/headerImageCover"
            android:layout_alignRight="@id/headerImageCover"
            android:layout_alignBottom="@id/headerImageCover"
            android:gravity="center_vertical|right"
            android:layout_marginRight="5dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <include layout="@layout/widget_3_1_devices"/>
    </LinearLayout>
</LinearLayout>