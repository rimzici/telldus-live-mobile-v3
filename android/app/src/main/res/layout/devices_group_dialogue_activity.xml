<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
            android:id="@+id/headerImage"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            app:siShape="@drawable/shape_no_padding_top"
            android:src="@drawable/telldus_geometric_header_bg"
            app:siSquare="false"/>
        <TextView
            android:id="@+id/txtWidgetTitleDialogue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unknown"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_alignLeft="@id/headerImage"
            android:layout_alignTop="@id/headerImage"
            android:layout_alignRight="@id/headerImage"
            android:layout_alignBottom="@id/headerImage"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/widgetDialogueCloseIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="statusx"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/telldusicons"
            android:background="@android:color/transparent"
            android:layout_alignLeft="@id/headerImage"
            android:layout_alignTop="@id/headerImage"
            android:layout_alignRight="@id/headerImage"
            android:layout_alignBottom="@id/headerImage"
            android:gravity="center_vertical|right"
            android:layout_marginRight="5dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingRight="8dp">
        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:flexWrap="wrap"
            app:flexDirection="row"
            app:alignItems="flex_start"
            app:alignContent="flex_start">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/leftMarginBell"
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:visibility="gone"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/topMarginBell"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:background="@android:color/transparent"
                        android:visibility="gone"/>
                    <include layout="@layout/button_bell"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/leftMarginUp"
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:visibility="gone"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/topMarginUp"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:background="@android:color/transparent"
                        android:visibility="gone"/>
                    <include layout="@layout/button_up"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/leftMarginDown"
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:visibility="gone"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/topMarginDown"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:background="@android:color/transparent"
                        android:visibility="gone"/>
                    <include layout="@layout/button_down"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/leftMarginStop"
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:visibility="gone"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/topMarginStop"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:background="@android:color/transparent"
                        android:visibility="gone"/>
                    <include layout="@layout/button_stop"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/leftMarginOff"
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:visibility="gone"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/topMarginOff"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:background="@android:color/transparent"
                        android:visibility="gone"/>
                    <include layout="@layout/button_off"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/leftMarginDim25"
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:visibility="gone"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/topMarginDim25"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:background="@android:color/transparent"
                        android:visibility="gone"/>
                    <include layout="@layout/button_dim25"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/leftMarginDim50"
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:visibility="gone"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/topMarginDim50"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:background="@android:color/transparent"
                        android:visibility="gone"/>
                    <include layout="@layout/button_dim50"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/leftMarginDim75"
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:visibility="gone"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/topMarginDim75"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:background="@android:color/transparent"
                        android:visibility="gone"/>
                    <include layout="@layout/button_dim75"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/leftMarginOn"
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:visibility="gone"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/topMarginOn"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:background="@android:color/transparent"
                        android:visibility="gone"/>
                    <include layout="@layout/button_on"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.flexbox.FlexboxLayout>
    </LinearLayout>
</LinearLayout>