<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dimmer75Cover"
    android:layout_width="0dip"
    android:layout_weight="0.2"
    android:layout_height="match_parent"
    android:layout_gravity="center|center"
    android:gravity="center|center"
    android:visibility="gone"
    android:elevation="5dp"
    android:layout_marginLeft="1dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="5dp">
    <TextView
        android:id="@+id/iconCheck75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="statuscheck"
        android:layout_gravity="center|center"
        android:gravity="center|center"
        android:fontFamily="@font/telldusicons"
        android:textColor="@color/widgetGreen"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/dimmer75CoverLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center"
        android:gravity="center|center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/dimmer75"
            android:layout_width="wrap_content"
            android:layout_height="16sp"
            android:textSize="26sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:fontFamily="@font/telldusicons"
            android:textColor="@color/white"
            android:background="@android:color/transparent"
            android:layout_marginTop="-5dp"/>
        <TextView
            android:id="@+id/txtDimmer75"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="75%"
            android:textSize="10sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:background="@android:color/transparent"/>
    </LinearLayout>
</FrameLayout>